<p id="notice"><%= notice %></p>

<h1>Compras</h1>

<table>
  <thead>
    <tr>
      <th>ID Compra</th>
      <th>Nombre Producto</th>
      <th>Descripción</th>
      <th>Precio</th>
      <th>Fecha de lote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
      <tr>
        <td><%= compra.idCompra %></td>
        <td><%= compra.nombre %></td>
        <td><%= compra.descripcion %></td>
        <td><%= compra.precio %></td>
        <td><%= compra.fechaLote %></td>
        <td><%= link_to 'Mostrar', compra, class: 'button radius' %></td>
        <td><%= link_to 'Editar', edit_compra_path(compra), class: 'button radius success' %></td>
        <td><%= link_to 'Eliminar', compra, method: :delete, data: { confirm: '¿Está seguro de realizar la operación?'}, class:'button radius alert'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Compra', new_compra_path, class: 'button round success' %>
